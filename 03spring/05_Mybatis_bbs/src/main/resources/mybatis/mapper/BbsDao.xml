<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.spring.bbs.IBbsDao">
	<!-- 1. 전체 글 목록 -->
	<select id="listDao" resultType="com.study.spring.bbs.BbsDto">
		select * from simple_bbs order
		by id desc
	</select>

	<!-- 2. 게시글 개수 -->
	<select id="countDao" resultType="com.study.spring.bbs.BbsDto">
		select count(*) from simple_bbs
	</select>
	
	<!-- 3. 단일 글 조회 -->
	<select id="viewDao" resultType="com.study.spring.BbsDto">
		select id, writer, title, content from simple_bbs
		where id = #{id}
	</select>
	
	<!-- 4. 글 작성 -->
	
</mapper>

